---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot data-theme="dark"/>
	</body>
</html>

<style is:global>

	:root{
		--color-bg: #000;
		--slider-bg: #dddddd;
		--slider-bg-before: #fff;
		--slider-input-bg: #613fb9;
	}

	[data-theme="dark"]{
		--color-bg: #0f0f0f;
		--color-text: #878787;
		--color-titles: #fff;
		--color-h2: #636363;
		--color-article-h3: #eceaea;
		--color-article-h4: #c5c1c1;
		--color-a: #eceaea;
	}

	[data-theme="light"]{
		--color-bg: #fff;
		--color-text: #666;
		--color-titles: #000;
		--color-h2: #444;
		--color-article-h3: #111;
		--color-article-h4: #222;
		--color-a: #111;
	}

	html {
		font-family: Menlo, Monaco, Lucida Console, "Courier New", Courier, monospace;
		background-color: var(--color-bg);
		letter-spacing: -0.0025rem;
	}

	body,figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4 {
		color: var(--color-titles);
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	p {
		color: var(--color-text);
		font-size: 0.9rem;^
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}

	.print {
    	display: none !important;
  	}

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }

</style>
